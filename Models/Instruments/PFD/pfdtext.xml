<?xml version="1.0"?>


<PropertyList>
    <name>PFDtext</name>
    <w-base>256</w-base>
    <h-base>256</h-base>

    <layers>
          <layer>
            <name>CMD annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>5</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>controls/autoflight/autopilot/engage</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-50</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>40</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>SPD annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>autopilot/locks/speed</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-80</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>68</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>ROLL annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>autopilot/locks/heading</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-50</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>72</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>PITCH annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>autopilot/locks/altitude</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-15</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>72</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>FD on</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/flightdirector/AP-annun</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>72</offset>
                </transformation>
            </transformations>
        </layer>


        <layer>
            <name>mach</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>1.0</red>
                <green>1.0</green>
                <blue>1.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>velocities/mach</property>
                    <format>%0.3f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-120</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-100</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>airspeed</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>1.0</red>
                <green>1.0</green>
                <blue>1.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>velocities/airspeed-kt</property>
                    <format>%03.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-121</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-22</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>altitude</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>1.0</red>
                <green>1.0</green>
                <blue>1.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/altimeter/indicated-altitude-ft</property>
                    <format>%05.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-21</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>inhg</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>5</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/altimeter/setting-inhg</property>
                    <format>%2.2f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>28</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-101</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>target-alt</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>5</point-size>
            <color>
                <red>1.0</red>
                <green>0.0</green>
                <blue>1.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>autopilot/settings/target-altitude-ft</property>
                    <format>%2.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>57</offset>
                </transformation>
            </transformations>
        </layer>
  
        <layer>
            <name>target-spd</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>1.0</red>
                <green>0.0</green>
                <blue>1.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>autopilot/settings/target-speed-kt</property>
                    <format>%2.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-120</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>57</offset>
                </transformation>
            </transformations>
        </layer>

         <layer>
        	<name>radio-alt</name>
                <condition>
  	       <less-than>
                <property>/position/altitude-agl-ft</property>
                <value>2500</value>
                </less-than>
             </condition>
       	        <type>text</type>
       	        <font>arial_black</font>
               <point-size>5</point-size>
          <color>
               <red>0.0</red>
               <green>1.0</green>
               <blue>0.0</blue>
          </color>
          <chunks>
              <chunk>
                  <type>literal</type>
                  <text>RA  </text>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-5</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>-80</offset>
            </transformation>
        </transformations>
    </layer>

         <layer>
            <name>radio-alt</name>
             <condition>
              <and>
  	       <less-than>
                <property>/position/altitude-agl-ft</property>
                <value>2500</value>
                </less-than>
                <greater-than>
                <property>/position/altitude-agl-ft</property>
                <value>300</value>
                </greater-than>
              </and>
             </condition> 
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>position/altitude-agl-ft</property>
                    <format>%4.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-10</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-90</offset>
                </transformation>
            </transformations>
        </layer>

         <layer>
            <name>radio-alt</name>
             <condition>               
  	       <less-than>
                <property>/position/altitude-agl-ft</property>
                <value>300</value>
                </less-than>                
             </condition> 
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>1.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>position/altitude-agl-ft</property>
                    <format>%4.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-10</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-90</offset>
                </transformation>
            </transformations>
        </layer>

</layers>

</PropertyList>
