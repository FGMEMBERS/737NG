<?xml version="1.0"?>

<PropertyList include = "gpws-sound.xml"> <!--include = "gpws-sound.xml"-->
	<fx>
		<gear>
			<name>gears</name>
			<path>supp/gear.wav</path>
			<mode>in-transit</mode>
			<property>gears/gear/position-norm</property>
			<volume>
				<offset>0.5</offset>
			</volume>
		</gear>
		
		<gear>
			<name>gear</name>
			<path>supp/gear.wav</path>
			<mode>in-transit</mode>
			<property>gear/gear/position-norm</property>
		</gear>
		
		<flaps>
			<name>flaps</name>
			<path>supp/flaps.wav</path>
			<mode>in-transit</mode>
			<property>surface-positions/flap-pos-norm</property>
			<volume>
				<property>sim/current-view/z-offset-m</property>
				<offset>1</offset>
				<factor>0.4</factor>
				<min>-1</min>
				<max>0.6</max>
			</volume>
		</flaps>
		
		<wow>
			<name>wow 0</name>
			<mode>once</mode>
			<path>supp/wow.wav</path>
			<condition>
				<property>gear/gear[0]/wow</property>
			</condition>
			<volume>
				<property>sim/current-view/internal</property>
				<offset>0</offset>
			</volume>
		</wow>
		<wow>
			<name>wow 1</name>
			<mode>once</mode>
			<path>supp/wow.wav</path>
			<condition>
				<property>gear/gear[1]/wow</property>
			</condition>
			<volume>
				<property>sim/current-view/internal</property>
				<offset>0</offset>
			</volume>
		</wow>
		<wow>
			<name>wow 2</name>
			<mode>once</mode>
			<path>supp/wow.wav</path>
			<condition>
				<property>gear/gear[2]/wow</property>
			</condition>
			<volume>
				<property>sim/current-view/internal</property>
				<offset>0</offset>
			</volume>
		</wow>
		
		<wow>
			<name>wow 3</name>
			<mode>once</mode>
			<path>supp/wow.wav</path>
			<condition>
				<property>gears/gear[0]/wow</property>
			</condition>
			<volume>
				<property>sim/current-view/internal</property>
				<offset>0</offset>
			</volume>
		</wow>
		<wow>
			<name>wow 4</name>
			<mode>once</mode>
			<path>supp/wow.wav</path>
			<condition>
				<property>gears/gear[1]/wow</property>
			</condition>
			<volume>
				<property>sim/current-view/internal</property>
				<offset>0</offset>
			</volume>
		</wow>
		<wow>
			<name>wow 5</name>
			<mode>once</mode>
			<path>supp/wow.wav</path>
			<condition>
				<property>gears/gear[2]/wow</property>
			</condition>
			<volume>
				<property>sim/current-view/internal</property>
				<offset>0</offset>
			</volume>
		</wow>
		
		<roll>
			<name>roll</name>
			<path>supp/roll.wav</path>
			<mode>looped</mode>
			<condition>
				<greater-than>
					<property>velocities/groundspeed-kt</property>
					<value>0.1</value>
				</greater-than>
				<or>
					<property>gears/gear[0]/wow</property>
					<property>gears/gear[1]/wow</property>
					<property>gears/gear[2]/wow</property>
					<property>gear/gear[0]/wow</property>
					<property>gear/gear[1]/wow</property>
					<property>gear/gear[2]/wow</property>
				</or>
			</condition>
			<volume>
				<property>sim/current-view/internal</property>
				<factor>0.9</factor>
				<offset>0.3</offset>
			</volume>
			<volume>
				<property>velocities/groundspeed-kt</property>
				<factor>0.014</factor>
				<offset>0</offset>
			</volume>
		</roll>
	</fx>
</PropertyList>